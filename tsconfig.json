{
    "compileOnSave": true,
    "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "listFiles": true,
    "experimentalDecorators": true,
    "sourceMap": true
    },
        "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}